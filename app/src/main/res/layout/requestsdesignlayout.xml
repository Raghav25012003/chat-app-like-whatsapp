<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photorequestdesign"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profilephoto"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_namerequestdesign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User name will be here"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="9dp"
                    />

                <ImageView
                    android:id="@+id/user_onlinerequestdesign"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/online"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_statusrequestdesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="5dp"
                android:text="User status will be here"
                android:textSize="15dp"

                />
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/acceptButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Accept  "
                    android:background="#33FF33"
                    android:layout_marginLeft="9dp"
                    android:padding="5dp"
                    android:layout_marginTop="6dp"
                    />
                <TextView
                    android:id="@+id/rejectButton"
                    android:layout_width="wrap_content"
                    android:width="65dp"
                    android:layout_height="wrap_content"
                    android:text="  Reject"
                    android:background="#FF0000"
                    android:layout_marginLeft="9dp"
                    android:padding="5dp"
                    android:layout_marginTop="6dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>