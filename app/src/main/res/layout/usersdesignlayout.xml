<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photoindesign"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profilephoto"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_namedesign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User name will be here"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="9dp"
                    />

                <ImageView
                    android:id="@+id/user_onlinedesign"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/online"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_statusdesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User status will be here"
                android:textSize="15dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="30dp"

                />
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>